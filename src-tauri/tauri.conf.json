{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "SaddleStitcher",
    "version": "0.0.6"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$RESOURCE/**",
          "$APPDATA",
          "$APPDATA/**",
          "$APPCONFIG",
          "$APPCONFIG/**"
        ]
      },
      "path": {
        "all": true
      },
      "process": {
        "relaunch": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "sh",
            "cmd": "sh",
            "args": true
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.amiiby.saddlestitcher",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["*.py", "*.sh", "*.bat"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "SaddleStitcher",
        "width": 800
      }
    ]
  }
}
